generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bets {
  id                  String    @id @default(uuid())
  createdAt           DateTime  @default(now())
  condition           String
  name                String
  currentBetCondition String
  userId              String
  winner              String?
  loser               String?
  answer              Boolean?
  betDeadline         String
  stakeAmount         Float
  user1Answer         Boolean?
  user2Answer         Boolean?
  user2Id             String?
  user1Name           String?
  user2Name           String?
  user                User      @relation(fields: [userId], references: [id])
  historys            History[]
}

model History {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  betId     String
  userId    String
  loser     String
  name      String
  user2Id   String
  winner    String
  bets      Bets     @relation(fields: [betId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  email         String    @unique
  firstName     String
  lastName      String
  updateAt      DateTime? @default(now())
  walletAddress String
  username      String
  bets          Bets[]
  historys      History[]
}
